<!DOCTYPE html>
<html>
<%= render('layouts/head') %>
<body>

  <div id="container">

    <div id='header'>
      <%= render('layouts/logo') %>
      <%= render('layouts/account_menu') %>
    </div>
    
    <%= render('layouts/ajax') %>
    <%= render('layouts/menu') %>
    <%= render('layouts/flash', :flash => flash) %>
    
    <div id='main'>
      <%= yield %>
    </div>
    
    <div id='sidebar'>
      <%= yield :sidebar %>
    </div>

    <%= render('layouts/footer') %>

  </div>

</body>
</html>