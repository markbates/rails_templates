<%= title 'Sign in' %>

<%= semantic_form_for(@user, :url => user_session_path) do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, :as => :boolean %>
    <% end %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button 'Sign in' %>
  <% end %>
<% end %>

<%= render :partial => "devise/shared/links" %>