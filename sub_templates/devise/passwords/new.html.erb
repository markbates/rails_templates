<%= title 'Forgot your password?' %>

<%= semantic_form_for(@user, :url => user_password_path, :html => { :method => :post }) do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button 'Send reset instructions' %>
  <% end %>
<% end %>

<%= render :partial => "devise/shared/links" %>